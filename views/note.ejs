<% if (typeof notes !== 'undefined' && notes && notes.length > 0){ %>
<!-- <section id="notespace" class="grid grid-cols-4 items-center"> -->
<% notes.forEach(note => { %>
<div class="note-item relative rounded-lg p-2 bg-yellow-200 w-full min-h-60">
  <p id="title-<%= note._id %>" class="text-sm"><%= note.title %></p>
  <hr class="border-t-2 border-transparent border-gray-200 my-2" />
  <p id="content-<%= note._id %>" class="text-sm"><%= note.content %></p>
  <button
    data-id="<%= note._id %>"
    class="delete-btn m-3 bg-yellow-600 text-white px-2 py-1 rounded-lg text-center absolute bottom-0 right-0"
  >
    <span class="material-symbols-sharp">delete</span>
  </button>
</div>
<% }); %>
<!-- </section> -->
<% } else { %>
<h2 class="items-center justify-center text-gray-300">No notes found.</h2>
<% } %>
