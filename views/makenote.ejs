<form
  action="/makenote"
  id="note-form"
  method="post"
  class="w-1/2 h-40 shadow-xl rounded-md relative flex flex-col flex-grow justify-start items-center p-2"
>
  <div class="space-y-1 flex focus:flex-grow flex-col items-center w-full">
    <div class="w-full flex justify-center">
      <input
        id="notetitle"
        type="text"
        placeholder="Title"
        name="title"
        class="w-full h-8 rounded-lg placeholder-italic placeholder-pl-2 text-slate-200 bg-transparent focus:outline-none"
      />
    </div>
    <div id="contentdiv" class="w-9/12 flex justify-center">
      <textarea
        id="notecontent"
        type="text"
        name="content"
        placeholder="Note content"
        class="w-full h-auto rounded-lg outline-none placeholder-pl-2 text-slate-200 bg-transparent resize-none focus:outline-none"
      ></textarea>
    </div>
  </div>
  <button
    class="w-16 h-10 absolute bottom-4 right-4 text-center text-white shadow-lg hover:bg-slate-500 bg-slate-400 rounded-2xl focus:outline-none"
  >
    Close
  </button>
</form>
